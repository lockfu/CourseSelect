<%= form_for @course, html: {class: 'form-horizontal', role: 'form'} do |f| %>
    <%= render 'shared/error_messages', :object => @course %>


      <div class="form-group">
      <%= f.label "考试日期", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :exam_date, class: 'form-control', placeholder: "输入考试日期" %>
        </div>
      </div>
    </div>    <div class="form-group">
      <%= f.label "考试时间", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :exam_time, class: 'form-control', placeholder: "输入考试时间" %>
        </div>
      </div>
    </div>    <div class="form-group">
      <%= f.label "考试地点", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :exam_place, class: 'form-control', placeholder: "输入考试地点" %>
        </div>
      </div>
    </div>




    <%= f.submit '提交', class: "btn btn-success btn-block" %>
    <%= link_to '取消', courses_path, :class => "btn btn-default btn-block" %>

<% end %>

