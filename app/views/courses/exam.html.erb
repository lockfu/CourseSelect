<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>


    <div class="col-sm-10">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <% if teacher_logged_in? %><h3 class="panel-title">考试管理</h3><% end %>
          <% if student_logged_in? %><h3 class="panel-title">考试信息</h3><% end %>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>考试方式</th>

              <th>考试日期</th>
              <th>考试时间</th>
              <th>考试地点</th>
            </tr>

            <tbody>
            <% @course.each do |course| %>
                <tr>

                    <% if teacher_logged_in? %>
                      <td><a href="showCourseInfo?cid=<%=course.id %>"><%= course.name %></a></td>
                      <td><%= course.credit %></td>
                      <td><%= course.exam_type %></td>
                      <td><%= course.exam_date %></td>
                      <td><%= course.exam_time %></td>
                      <td><%= course.exam_place %></td>
                      <td><%= link_to "编辑", editexam_course_url(course), class: 'btn btn-xs btn-info' %></td>
                    <% end %>


                  <% if student_logged_in? %>
                    <% if course.exam_date != nil %>  

                      <td><a href="showCourseInfo?cid=<%=course.id %>"><%= course.name %></a></td>
                      <td><%= course.credit %></td>
                      <td><%= course.exam_type %></td>
                      <td><%= course.exam_date %></td>
                      <td><%= course.exam_time %></td>
                      <td><%= course.exam_place %></td>
                      <% end %>
                  <% end %>
                </tr>
            <% end %>
            </tbody>



          </table>

        </div>
      </div>
    </div>











