<script type="text/javascript">
  function addCheckCourse(){
    var oids = document.getElementsByName("cids");
    var result=[];
    var count=0;
    for(var i = 0;i<oids.length;i++){
      if (oids[i].checked) {
        result[count++]=oids[i].value;
      }
    }
    window.location.href = "selectCourseByCids?cids="+result;
  }

  function chbckick(){
    var ohdr = document.getElementById("hdr");
    var ocobjs = document.getElementsByName("cids");
    if(ohdr.checked){
      for(var i = 0;i<ocobjs.length;i++){
        if(ocobjs[i].checked) continue;
        ocobjs[i].checked = "checked";
      }
    }else{
       for(var i = 0;i<ocobjs.length;i++){
        if(ocobjs[i].checked) 
         ocobjs[i].checked = "";
      }
    }
  }

  function childchange(cobj){
    var ohdr = document.getElementById("hdr");
    var ocobjs = document.getElementsByName("cids"); 

    var count = 0;
    if(cobj.checked){
       for(var i = 0;i<ocobjs.length;i++){
        if(ocobjs[i].checked == false) break;
        count++;
      }
      if(count == ocobjs.length){
        ohdr.checked = "checked";
        count = 0;
      }
    }else{
      for(var i = 0;i<ocobjs.length;i++){
        if(ocobjs[i].checked == true) break;
        count++;
      }
      if(count == ocobjs.length){
        ohdr.checked = "";
        count = 0;
      }
    }
  }

</script>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">

      
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>
                <input type="checkbox" name="call" id="hdr" onchange="chbckick();" /><label for="hdr">全选</label>
              </th>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <th>操作</th>
            </tr>
            </thead>
            <tbody>

            <% @course.each do |course| %>
                <tr>
                  <th>
                    <input type="checkbox" name="cids" value="<%=course.id%>" onchange="childchange(this);"/>
                  </th>
                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td>
                    <%if !course.checknum%>
                    <%= 0%>
                    <%else%>
                    <%=course.checknum%>
                    <%end%>  
                  </td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <td><%= link_to "加入课程", select_course_path(course), class: 'btn-sm btn-info' %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
          <input id="addCC" type="button" onclick="addCheckCourse();" value="增加选中课程" style="float: right;" />
        </div>
      </div>
    </div>
  </div>
</div>


