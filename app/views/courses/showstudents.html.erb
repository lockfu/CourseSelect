
 <div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>


    <div class="col-sm-10">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title">选课学生名单</h3>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>


              <th>学号</th>
              <th>名字</th>
              <th>专业</th>
              <th>培养单位</th>
              <th>邮箱</th>
            </tr>

            <tbody>
            <% @students.each do |student| %>
                <tr>

                      <td><%= student.num %></td>
                      <td><%= student.name %></td>
                      <td><%= student.major %></td>
                      <td><%= student.department %></td>
                      <td><%= student.email %></td>




                </tr>
            <% end %>
            </tbody>



          </table>

        </div>
      </div>
    </div>
