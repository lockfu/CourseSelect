<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-md-offset-1 col-sm-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="text-center">课程信息</h3>
        </div>
        <div class="panel-body">
        <center>
          <table>
            <tr>
              <td>课程代号: </td>
              <td><%=@course.course_code%></td>
            </tr>
             <tr>
              <td> 课程名：</td>
              <td><%=@course.name%></td>
            </tr>
             <tr>
              <td>课程类型：</td>
              <td><%=@course.course_type%></td>
            </tr>
             <tr>
              <td>学时/学分：</td>
              <td><%=@course.credit%></td>
            </tr>
             <tr>
              <td>周数：</td>
              <td><%=@course.course_week%></td>
            </tr>
             <tr>
              <td>上课时间：</td>
              <td><%=@course.course_time%></td>
            </tr>
             <tr>
              <td>教室：</td>
              <td><%=@course.class_room%></td>
            </tr>
             <tr>
              <td>考试类型：</td>
              <td><%=@course.exam_type%></td>
            </tr>

            
            <tr>
              <td>考试日期：</td>
              <td><%=@course.exam_date%></td>
            </tr>
            <tr>
              <td>考试时间：</td>
              <td><%=@course.exam_time%></td>
            </tr>
             <tr>
              <td>考试地点：</td>
              <td><%=@course.exam_place%></td>
            </tr>


          </table>
          </center>
        </div>
      </div>
    </div>
  </div>
</div>
