<script language="javascript" type="text/javascript">
window.setTimeout("window.location='/grades/studentInfo?cid=<%=@grades[0].course_id %>&format=xls'",100);
</script>

<script language="javascript" type="text/javascript">
window.setTimeout("window.location='/courses'",300);
</script>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>


    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <% if teacher_logged_in? %><h3 class="panel-title">成绩管理:</h3><% end %>
          <% if student_logged_in? %><h3 class="panel-title">成绩列表</h3><% end %>
        </div>
        <div class="panel-body" >
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>学号</th>
              <th>名字</th>
              <th>专业</th>
              <th>培养单位</th>
              <th>课程</th>
              <th>目前分数</th>

              <% if teacher_logged_in? %>
              <th>
               <%= link_to "成绩表下载", downteacher_grades_url(:cid => "#{@grades[0].course_id}"),class: 'btn btn-xs btn-info' %></td>
              </th>


              <% end %>



            </tr>
            </thead>
            <tbody>

            <% @grades.each do |grade| %>

                <tr>
                  <% if student_logged_in? %>
                    <% if grade.grade != nil %>
                      <td><%= grade.user.num %></td>
                      <td><%= grade.user.name %></td>
                      <td><%= grade.user.major %></td>
                      <td><%= grade.user.department %></td>
                      <td><%= grade.course.name %></td>
                      <td><%= grade.grade %></td>
                    <% end %>
                  <% end %>

                  <% if teacher_logged_in? %>
                      <td><%= grade.user.num %></td>
                      <td><%= grade.user.name %></td>
                      <td><%= grade.user.major %></td>
                      <td><%= grade.user.department %></td>
                      <td><%= grade.course.name %></td>
                      <td><%= grade.grade %></td>
                      <%= form_for grade, url: grade_url(id: grade.id, course_id: grade.course.id), method: :patch do |f| %>
                          <td><%= f.text_field :grade %></td>
                          <td><%= f.submit "提交", class: "btn btn-success btn-xs" %></td>
                      <% end %>
                  <% end %>

                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
